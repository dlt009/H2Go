<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animationCache="false"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    android:weightSum="1"
    >

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="24dp"
         />

    <TextView
        android:id="@+id/filter_text_radius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="36dp"
        android:text="Radius" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/spinner1"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="8dp"
         />

    <TextView
        android:id="@+id/filter_text_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/spinner2"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:text="Rating" />

    <TextView
        android:id="@+id/filter_text_extra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/filter_text_rating"
        android:layout_gravity="center"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:text="Types" />

    <ListView
        android:id="@id/android:list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_apply"
        android:layout_below="@id/spinner2"
        android:layout_marginStart="62dp"
        android:layout_marginTop="6dp"
        android:layout_weight="0.50"
        android:choiceMode="multipleChoice"
        android:clickable="true"></ListView>

    <Button
        android:id="@+id/button_apply"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="8dp"
        android:text="Apply" />


</RelativeLayout>
